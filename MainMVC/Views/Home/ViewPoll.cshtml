@model MainMVC.Models.Polls.Entities.Poll

@{
    ViewData["Title"] = "Poll";
}
<div class="jumbotron">
    <h3>@Model.Name</h3>
    <h6>@Model.Description</h6>
    <p><em>Created by @Model.CreatorLogin on @Model.CreationDate</em></p>
</div>

<form asp-controller="home" asp-action="CreatePoll" method="post" class="mt-3">

    @for (var questionNum = 0; questionNum < Model.Questions.Count; questionNum++)
    {
        <div class="card mt-3 mb-1">
            <div class="card-body">
                <h5 class="card-title">@(Model.Questions.IndexOf(Model.Questions[questionNum]) + 1). @Model.Questions[questionNum].Text</h5>
                <div class="list-group">
                    @for (int answerNum = 0; answerNum < Model.Questions[questionNum].PossibleAnswers.Count; answerNum++)
                    {
                        <div class="input-group">
                            @*<div class="input-group-prepend">
                                <div class="input-group-text">
                                    <input type="radio" value="@Model.Questions[questionNum].PossibleAnswers[answerNum].AnswerSelected">
                                </div>
                            </div>*@
                            @*<input type="text" class="form-control" aria-label="Text input with radio button">*@
                            <a class="form-control">@Model.Questions[questionNum].PossibleAnswers[answerNum].Text</a>
                        </div>
                        @*<input type="checkbox" asp-for="@answer.AnswerSelected" />*@
                    }
                </div>
                <div>SoleAnswer @Model.Questions[questionNum].SoleAnswer</div>
            </div>
        </div>

    }
    <div class="form-group row justify-content-center mt-2">
        <button type="submit" class="btn btn-primary">Ok</button>
    </div>
</form>