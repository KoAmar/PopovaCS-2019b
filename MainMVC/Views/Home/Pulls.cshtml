@model IList<Pull>
@{
    ViewData["Title"] = "Home Page";
}

<dif class="row">
    @foreach (var pull in Model)
    {
        <dif class="col-2"></dif>
        <dif class="col-8">
            <div class="card m-1 pl-5">
                <div class="card-body">
                    <h5 class="card-title">@pull.Id.  @pull.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@pull.CreatorLogin</h6>
                    <p class="card-text">@pull.CreationDate</p>
                    <a asp-controller="Home" asp-action="Pull" asp-route-id="@pull.Id" class="card-link">Открыть</a>
                    <a href="#" class="card-link">Another link</a>
                </div>
            </div>
        </dif>
        <dif class="col-2"></dif>
    }
</dif>