@model MainMVC.Models.Polls.Entities.Question
@{
    ViewData["Title"] = "EditAnswers";
}

<h1>EditAnswer @Model.ToString()</h1>
<form asp-controller="home" asp-action="EditAnswers" method="post" class="mt-3">

    <div class="card mt-3 mb-1">
        <h6 class="card-header">
            Number of Answers:
        </h6>
        <div class="card-body">
            @for (int counter = 0; counter < Model.PossibleAnswers.Count; counter++)
            {
                @*<div class="form-group">*@
                <div class="row m-1">
                    <div class="col-auto"><label class="pt-1"> №@(Model.PossibleAnswers.IndexOf(Model.PossibleAnswers[counter]) + 1) </label></div>
                    <div class="col">
                        <span asp-validation-for="PossibleAnswers[counter].Text" class="text-danger"></span>
                        <input asp-for="PossibleAnswers[counter].Text" class="form-control" placeholder="AnswersCount">
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="form-group row justify-content-center mt-2">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>