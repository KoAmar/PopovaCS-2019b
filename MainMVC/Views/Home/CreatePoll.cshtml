@model MainMVC.Models.Polls.Entities.Poll
@{
    ViewData["Title"] = "Poll Create";
}

@Html.ValidationSummary(false,
    "", new { @class = "text-danger" })
<form asp-controller="home" asp-action="CreatePoll" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Name">Name of the Poll:</label>
        <input asp-for="Name" class="form-control" placeholder="Input name of poll" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description of the Poll:</label>
        <textarea asp-for="Description" class="form-control"
                  placeholder="Input description for poll"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group row justify-content-center">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
