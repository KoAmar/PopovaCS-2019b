@model IList<Poll>
@{
    ViewData["Title"] = "Home Page";
}

<dif class="row">
    @foreach (var poll in Model)
    {
        <div class="card mb-2 w-100">
            <dif class="card-header">
                <div class="row  justify-content-between pl-3 pr-3">
                    <h5>@poll.Name</h5>
                    <p class="text-muted">@poll.CreatorLogin</p>
                </div>
            </dif>
            <div class="card-body pl-5">
                <p class="card-title">@poll.Description</p>
                <p class="card-text text-center"><small class="text-muted">№@(poll.Id + 1)</small></p>
                <a asp-controller="Home" asp-action="Poll" asp-route-id="@poll.Id" class="card-link">Открыть</a>
                <a href="#" class="card-link">Another link</a>
            </div>
        </div>
    }
</dif>